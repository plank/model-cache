{
    "name": "plank/model-cache",
    "description": "An aggressive Laravel caching scheme for infrequently updated content.",
    "keywords": [
        "Plank",
        "laravel",
        "model-cache"
    ],
    "homepage": "https://github.com/plank/model-cache",
    "license": "MIT",
    "authors": [
        {
            "name": "Kurt Friars",
            "email": "kurt.friars@plank.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^7.10.0",
        "orchestra/testbench": "^8.22.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Plank\\ModelCache\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Plank\\ModelCache\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-model-cache --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Plank\\ModelCache\\ModelCacheServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}